#include <iostream>
using namespace std;

int main() {
    //Write your code here
    int N;
    cin>>N;
    int sum = 0;
    for(int i=2;i<=N;i++){
        if(i%2==0){
         sum = sum + i;
        }
    }
    cout<<sum<< " ";

    return 0;
}